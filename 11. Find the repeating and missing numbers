#include <bits/stdc++.h>
using namespace std;

pair<int, int> missingAndRepeating(vector<int> &arr, int n) {
    int repeating = -1;
    int missing = -1;
    for (int i = 0; i < n; i++) {
        int index = abs(arr[i]) - 1;
        if (arr[index] > 0) {
            arr[index] *= -1;
        } else {
            repeating = abs(arr[i]);
        }
    }
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0) {
            missing = i + 1;
            break;
        }
    }
    return {missing, repeating};
}
